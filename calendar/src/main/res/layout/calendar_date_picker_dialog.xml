<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mdtp_date_picker_component_width"
    android:layout_height="wrap_content"
    android:background="@color/mdtp_date_picker_view_animator"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_full_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E, MMMM dd yyyy"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <include layout="@layout/calendar_head" />

    <include layout="@layout/calendar_body" />

    <include layout="@layout/calendar_foot" />

</LinearLayout>
